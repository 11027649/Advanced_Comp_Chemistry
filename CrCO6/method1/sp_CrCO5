#!/bin/bash
#SBATCH --nodes 1
#SBATCH --ntasks 12
#SBATCH --partition studentq
#SBATCH --time 24:00:00

export SCM_TMPDIR=/local/datastore0/$USER/$SLURM_JOBID
srun mkdir -p $SCM_TMPDIR
chmod 700 $SCM_TMPDIR
cd $SCM_TMPDIR
export TC_SUBMISSION_DIR=$SLURM_SUBMIT_DIR
echo $SLURM_JOB_NODELIST >> $SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.$SLURM_JOBID.out

$ADFBIN/adf <<eor>$SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.out

XC
  GGA blyp
END

BASIS
  TYPE TZ2P
  CORE none
END

ANALYTICALFREQ
END

SCF
  iterations 250
END

SYMMETRY C(4V)
CHARGE 0

ZLMFIT
  Quality normal
END

BECKEGRID
  Quality good
End

ATOMS
 50 Cr      0.00000000       0.00000000       0.00000000
 51 C       0.00000000       1.93883000       0.00000000
 52 O       0.00000000       3.09279000       0.00000000
 55 C       0.00000000      -1.93883000       0.00000000
 56 O       0.00000000      -3.09279000       0.00000000
 57 C       0.00000000       0.00000000      -1.93883000
 58 O       0.00000000       0.00000000      -3.09279000
 59 C       1.93883000       0.00000000       0.00000000
 60 O       3.09279000       0.00000000       0.00000000
 61 C      -1.93883000       0.00000000       0.00000000
 62 O      -3.09279000       0.00000000       0.00000000
END

ENDINPUT
eor

cp TAPE21 $SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.t21
