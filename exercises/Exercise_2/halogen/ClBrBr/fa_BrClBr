#!/bin/bash
#SBATCH --nodes 1
#SBATCH --ntasks 12
#SBATCH --partition studentq
#SBATCH --time 24:00:00

export SCM_TMPDIR=/local/datastore0/$USER/$SLURM_JOBID
srun mkdir -p $SCM_TMPDIR
chmod 700 $SCM_TMPDIR
cd $SCM_TMPDIR
export TC_SUBMISSION_DIR=$SLURM_SUBMIT_DIR
echo $SLURM_JOB_NODELIST >> $SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.$SLURM_JOBID.out

$ADFBIN/adf <<eor>$SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.out


XC
    GGA BP86
END

BASIS
    TYPE TZ2P
    CORE none
END

FRAGMENTS
BrCl $SLURM_SUBMIT_DIR/frag1_BrCl.t21
Br $SLURM_SUBMIT_DIR/frag2_Br.t21
END

SCF
    iterations 250
END

EPRINT
    SFO Eig Ovl
END

ZLMFIT
    Quality normal
END

BECKEGRID
    Quality good
End

SYMMETRY nosym
CHARGE -1

ATOMS
1.Br       -4.900312    3.058824   -0.044166 f=BrCl
2.Cl       -3.592957    0.908502    0.038438 f=BrCl
3.Br       -6.282112    5.331592   -0.131473 f=Br
END

ENDINPUT
eor

cp TAPE21 $SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.t21
