#!/bin/bash
#SBATCH --nodes 1
#SBATCH --ntasks 12
#SBATCH --partition studentq
#SBATCH --time 24:00:00

export SCM_TMPDIR=/local/datastore0/$USER/$SLURM_JOBID
srun mkdir -p $SCM_TMPDIR
chmod 700 $SCM_TMPDIR
cd $SCM_TMPDIR
export TC_SUBMISSION_DIR=$SLURM_SUBMIT_DIR
echo $SLURM_JOB_NODELIST >> $SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.$SLURM_JOBID.out

$ADFBIN/adf <<eor>$SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.out


XC
    GGA BP86
END

BASIS
    TYPE TZ2P
    CORE none
END

FRAGMENTS
FCl $SLURM_SUBMIT_DIR/frag1_FCl.t21
Cl $SLURM_SUBMIT_DIR/frag2_Cl.t21
END

SCF
    iterations 250
END

EPRINT
    SFO Eig Ovl
END

ZLMFIT
    Quality normal
END

BECKEGRID
    Quality good
End

SYMMETRY nosym
CHARGE -1

ATOMS
1.F        -4.925125    3.099637   -0.045734 f=FCl
2.Cl       -3.873652    1.278883    0.085098 f=FCl
3.Cl       -5.976604    4.920399   -0.176566 f=Cl
END

ENDINPUT
eor

cp TAPE21 $SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.t21
