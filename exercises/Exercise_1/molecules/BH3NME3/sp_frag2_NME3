#!/bin/bash
#SBATCH --nodes 1
#SBATCH --ntasks 12
#SBATCH --partition studentq
#SBATCH --time 24:00:00

export SCM_TMPDIR=/local/datastore0/$USER/$SLURM_JOBID
srun mkdir -p $SCM_TMPDIR
chmod 700 $SCM_TMPDIR
cd $SCM_TMPDIR
export TC_SUBMISSION_DIR=$SLURM_SUBMIT_DIR
echo $SLURM_JOB_NODELIST >> $SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.$SLURM_JOBID.out

$ADFBIN/adf <<eor>$SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.out

XC
  GGA BP86
END

BASIS
  TYPE TZ2P
  CORE none
END

ANALYTICALFREQ
END

SCF
  iterations 250
END

SYMMETRY nosym
CHARGE 0

ZLMFIT
  Quality normal
END

BECKEGRID
  Quality good
End

ATOMS
    1.C         1.156324   -0.871820   -0.975393
    2.N         0.369650   -0.257841    0.135666
    7.C        -0.138996    1.074230   -0.308947
    8.C        -0.793487   -1.139857    0.451621
    9.H         2.012123   -0.215582   -1.203437
   10.H         0.522746   -0.989753   -1.873577
   11.H         1.522687   -1.856954   -0.643228
   12.H         0.723811    1.718498   -0.544617
   13.H        -0.720968    1.520109    0.514079
   14.H        -0.778810    0.960636   -1.203301
   15.H        -1.372133   -0.678360    1.268367
   16.H        -1.434792   -1.262204   -0.440532
   17.H        -0.411541   -2.121565    0.776248
END

ENDINPUT
eor

cp TAPE21 $SLURM_SUBMIT_DIR/$SLURM_JOB_NAME.t21
